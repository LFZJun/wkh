{
    "manifest_version": 2,
    "name": "玩客猴助手",
    "short_name": "玩客猴助手",
    "description": "自动喂养、自动筛选",
    "version": "0.31",
    "browser_action": {
        "default_icon": "public/logo.png",
        "default_title": "玩客猴助手",
        "default_popup": "public/popup.html"
    },
    "permissions": [
        "*://h.miguan.in/*",
        "*://api.h.miguan.in/*",
        "https://walletapi.onethingpcs.com/",
        "http://mxz-upload-public.oss-cn-hangzhou.aliyuncs.com/wkh/whitelist.json",
        "tabs",
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "notifications",
        "storage",
        "cookies"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://h.miguan.in/*"
            ],
            "css": [],
            "js": [
                "public/zepto.min.js",
                "build/inject.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "background": {
        "scripts": [
            "build/background.js"
        ],
        "persistent": true
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}