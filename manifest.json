{
    "manifest_version": 2,
    "name": "玩客猴助手",
    "short_name": "玩客猴助手",
    "description": "自动喂养、自动筛选",
    "version": "0.3",
    "browser_action": {
        "default_icon": "logo.png",
        "default_title": "玩客猴助手",
        "default_popup": "popup.html"
    },
    "permissions": [
        "*://h.miguan.in/*",
        "*://api.h.miguan.in/*",
        "https://walletapi.onethingpcs.com/",
        "http://mxz-upload-public.oss-cn-hangzhou.aliyuncs.com/wkh/whitelist.json",
        "tabs",
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "notifications",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://h.miguan.in/*"
            ],
            "css": [],
            "js": [
                "zepto.min.js",
                "inject.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "background": {
        "scripts": [
            "web3.min.js",
            "ethereumjs-tx-1.3.3.min.js",
            "ethereumjs-wallet-0.6.0.js",
            "zepto.min.js",
            "background.js"
        ],
        "persistent": true
    }
}